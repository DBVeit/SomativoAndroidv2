<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListasCriadas">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListasCriadas" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_listas"
            android:layout_width="wrap_content"
            android:layout_height="521dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="66dp">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/txtV_totalItens"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:text="Total: R$"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/ibtn_refreshTotal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/txtV_totalItens"
            android:background="@null"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/ic_baseline_refresh_24" />

        <ImageButton
            android:id="@+id/ibtn_salvaLista"
            android:layout_width="42dp"
            android:layout_height="43dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="84dp"
            android:layout_marginBottom="11dp"
            android:background="@null"
            android:src="@drawable/ic_baseline_save_alt_24" />

        <ImageButton
            android:id="@+id/ibtn_criarItem"
            android:layout_width="56dp"
            android:layout_height="53dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_baseline_add_60"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>